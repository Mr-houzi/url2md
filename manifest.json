{
  "manifest_version": 2,
  "name": "url2md",
  "version": "1.1.0",
  "description": "Copy & Convert Url to Markdown format - 方便markdwon写作的小工具，复制url转成markdown格式",
  "icons":
  {
    "16": "img/icon.png",
    "48": "img/icon.png",
    "128": "img/icon.png"
  },
  "background":
  {
    "scripts": ["js/background.js", "js/helper.js"]
  },
  "browser_action":
  {
    "default_icon": "img/icon.png",
    "default_title": "url2md：复制url转成markdown格式",
    "default_popup": "popup.html"
  },
  "content_scripts":
  [
    {
      "matches": ["http://*/*", "https://*/*"],
      "js": ["js/content-script.js"],
      "run_at": "document_start"
    }
  ],
  "permissions":
  [
    "contextMenus",
    "tabs",
    "storage",
    "http://*/*",
    "https://*/*"
  ],
  "homepage_url": "https://github.com/Mr-houzi/url2md",
  "options_page": "options.html",
  "options_ui":
  {
    "page": "options.html",
    "chrome_style": true
  },
  "content_security_policy": "style-src 'self' 'unsafe-inline';script-src 'self' 'unsafe-eval' https://cdn.bootcss.com; object-src 'self' ;"
}